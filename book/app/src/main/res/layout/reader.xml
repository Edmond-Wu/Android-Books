<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/fullpage"
    tools:context=".controller.Reader">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="@dimen/scroll_margin"
        android:layout_marginTop="@dimen/scroll_margin"
        android:scrollbarThumbVertical="@color/lightBlue"
        android:scrollbarSize="@dimen/scroll_size"
        android:id="@+id/reader_scroll"
        android:layout_alignParentEnd="false">
        <TextView
            android:id="@+id/fullscreen_content"
            android:layout_marginRight="@dimen/reader_margin"
            android:layout_marginLeft="@dimen/reader_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:paddingTop="10dp"
            android:clickable="false" />
    </ScrollView>

</RelativeLayout>
