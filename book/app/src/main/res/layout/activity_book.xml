<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".controller.BookView">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/book_activity_cover"
        android:contentDescription="Cover"
        android:src="@drawable/ic_menu_slideshow"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/toggleButton"
        android:layout_marginLeft="-10dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Reincarnator"
        android:id="@+id/title"
        android:layout_alignTop="@+id/book_activity_cover"
        android:layout_toEndOf="@+id/book_activity_cover" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Synopsis"
        android:id="@+id/synopsis"
        android:layout_below="@+id/genres_text"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Once upon a time existed a God who enjoyed watching creatures fight the most. Bored, the God created a new world to entertain himself. The [Abyss]. Fight and you’ll be rewarded. Do not and you’ll perish.  The God started to fill his new world [Abyss] with the creatures he created.  The whole of humankind was sent to this brutal world 50 years ago and since then fought relentlessly. In the end only 4 have survived and threatened with extinction, they had to choose who will return to the past to save humankind from its perishment.  And so, Kang Hansoo is going back 55 years in time, to the time when he first came in this world, when he was 20.  Now, Hansoo has 5 years left before the rest of the world population is transported to this otherworld, this will also mark the time when humankind will be sent again into the new world [Abyss], to be forced to fight the other races and creatures inhabiting it…"
        android:id="@+id/synopsis_text"
        android:layout_below="@+id/synopsis"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ALLA"
        android:id="@+id/author"
        android:layout_below="@+id/title"
        android:layout_toEndOf="@+id/book_activity_cover" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_below="@+id/book_activity_cover"
        android:layout_marginTop="@dimen/stars_margin"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bookmarks"
        android:id="@+id/bookmark"
        android:layout_below="@+id/synopsis_text"
        android:layout_alignParentStart="true" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subscribe"
        android:id="@+id/toggleButton"
        android:checked="false"
        android:layout_below="@+id/author"
        android:layout_toEndOf="@+id/genres_text" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bookmarks"
        android:layout_below="@+id/bookmark"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Chapters"
        android:id="@+id/chapter"
        android:layout_below="@+id/bookmarks"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chapters"
        android:layout_below="@+id/chapter"
        android:layout_toStartOf="@+id/toggleButton"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Genres"
        android:id="@+id/genres"
        android:layout_below="@+id/ratingBar"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Action, Adventure"
        android:id="@+id/genres_text"
        android:layout_below="@+id/genres"
        android:layout_alignParentStart="true" />

</RelativeLayout>
</ScrollView>